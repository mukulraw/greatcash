<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e9e7e7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tree View induces All those joining who have either completed their Challenges or not completed."
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

      <android.support.v7.widget.CardView
          android:id="@+id/cardView"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          app:cardCornerRadius="4dp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          app:cardBackgroundColor="@color/colorPrimary"
          android:layout_below="@+id/text_static">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/text_UserName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="User Name"
                  android:textStyle="italic|bold"
                  android:textSize="16sp"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"/>

              <TextView
                  android:id="@+id/text_referId"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Refer ID:"
                  android:textStyle="italic|bold"
                  android:textSize="16sp"
                  android:textColor="@color/white"
                  android:layout_toLeftOf="@+id/text_referId_value"
                  android:layout_centerVertical="true" />

              <TextView
                  android:id="@+id/text_referId_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="67755460"
                  android:textStyle="italic|bold"
                  android:textSize="16sp"
                  android:textColor="@color/white"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="2dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true" />

          </RelativeLayout>
      </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_today"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardView"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_eranToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Earn Today"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:id="@+id/text_price_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>






        <android.support.v7.widget.CardView
            android:id="@+id/cardView_yesterday"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardView_today"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_eranYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Earn Yesterday"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:id="@+id/text_price_Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            android:id="@+id/cardView_week"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardView_yesterday"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_eranWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Earn One Week"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:id="@+id/text_price_Week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>






        <android.support.v7.widget.CardView
            android:id="@+id/cardView_month"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardView_week"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_eranMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Earn One Month"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:id="@+id/text_price_Month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>






        <android.support.v7.widget.CardView
            android:id="@+id/cardView_Year"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cardView_month"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_eranYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Earn One Year"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>


                <TextView
                    android:id="@+id/text_price_Year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>




        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/recycler_junction"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_below="@+id/cardView">-->
        <!--</android.support.v7.widget.RecyclerView>-->


    </RelativeLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress"
        android:visibility="gone" />



</RelativeLayout>